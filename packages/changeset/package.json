{
  "name": "@pixpilot/changeset",
  "type": "module",
  "version": "0.1.1",
  "packageManager": "pnpm@10.17.0",
  "description": "A utility for changesets",
  "author": "m.doaie <m.doaie@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/dev-config.git",
    "directory": "packages/changeset"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changeset-publish": "./bin/publish.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "clean": "git clean -xdf .cache .turbo dist",
    "clean:all": "git clean -xdf .cache .turbo dist node_modules",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@internal/tsdown-config": "workspace:*",
    "@internal/vitest-config": "workspace:*",
    "@pixpilot/env": "workspace:*",
    "@types/node": "catalog:dev",
    "eslint": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
